<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/image_song_cover"
        android:scaleType="centerCrop"
        android:src="@drawable/black_panther"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_time_left"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_3"
                android:textAlignment="viewStart"
                android:text="@string/default_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start" />

            <SeekBar
                android:layout_weight="1"
                android:id="@+id/seek_bar_duration"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_above="@+id/text_song_info"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_previous"
                android:background="@drawable/ic_skip_previous_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_play_pause"
                android:background="@drawable/ic_play_arrow_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_next"
                android:background="@drawable/ic_skip_next_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:padding="@dimen/dp_8"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/text_song_info"
            android:text="@string/song_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
